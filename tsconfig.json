{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
